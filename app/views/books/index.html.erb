<h2>Books</h2>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td>
			<%= book.title %>
		</td>
		<td>
			<%= book.body %>
		</td>
		<td>
			<%= link_to 'Show', book_path(book) %>
		</td>
		<td>
			<%= link_to 'Edit', edit_book_path(book) %>
		</td>
		<td>
			<%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
		</td>
	</tr>
	<% end %>
</table>

<h3>New book</h3>

<% if @book.errors.any? %>
 <div>
 	<ul>
 		<% @book.errors.full_messages.each do |message| %>
 			<li><%= message %></li>
 		<% end %>
 	</ul>
 </div>
<% end %>

<%= form_for(@book) do |f| %>

	<h5>Title</h5>
	<%= f.text_field :title %>

	<h5>Body</h5>
	<%= f.text_field :body %>

	<%= f.submit 'Create Book' %>

<% end %>



